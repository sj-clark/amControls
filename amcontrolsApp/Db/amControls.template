   field(PREC,  "2")
}

record(ao, "$(P)$(R)BeamWaist")
{
   field(PREC,  "2")
}

record(ao, "$(P)$(R)BeamWaistYPosition")
{
   field(PREC, "2")
}

record(ao, "$(P)$(R)DesiredBeamDiameter")
{
   field(PREC, "2")
}

record(ao, "$(P)$(R)SampleHeight")
{
   field(PREC, "2")
}

###############################
# AM control via Channel Access
###############################

record(busy,"$(P)$(R)Go")
{
   field(ZNAM,"Done")
   field(ZSV, "NO_ALARM")
   field(ONAM,"Go")
   field(OSV, "MINOR")
   field(VAL, "0")
}


##############################
# AM status via Channel Access
##############################

record(waveform,"$(P)$(R)AMStatus") 
{
   field(FTVL, "UCHAR")
   field(NELM, "256")
}

record(calcout, "$(P)$(R)Watchdog")
{
   field(SCAN, "1 second")
   field(INPA, "$(P)$(R)Watchdog.VAL NPP")
   field(CALC, "A-1")
   field(OCAL, "A>0?1:0")
   field(OOPT, "On Change")
   field(DOPT, "Use OCAL")
   field(OUT,  "$(P)$(R)ServerRunning PP")
}

record(bi, "$(P)$(R)ServerRunning")
{
   field(ZNAM, "Stopped")
   field(ZSV,  "MAJOR")
   field(ONAM, "Running")
   field(OSV,  "NO_ALARM")
}